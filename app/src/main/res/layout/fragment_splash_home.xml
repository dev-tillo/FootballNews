<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.SplashHome">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomnavigation"
        app:layout_constraintTop_toTopOf="parent" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/bacgroundd"
        android:elevation="12sp"
        android:isScrollContainer="true"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:backgroundColor="@android:color/transparent"
        app:iconMargin="@dimen/cardview_default_elevation"
        app:iconSize="@dimen/_20sdp"
        app:iconTint="@color/project"
        app:iconTintActive="@color/white"
        app:indicatorColor="@color/project"
        app:indicatorRadius="10dp"
        app:itemPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom"
        app:textColor="@color/white"
        app:textSize="12sp"
        tools:ignore="NotSibling,UnusedAttribute" />


</androidx.constraintlayout.widget.ConstraintLayout>