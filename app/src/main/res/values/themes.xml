<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballNews" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/project</item>
        <item name="colorPrimaryVariant">@color/project</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/project</item>
        <!-- Status bar color. -->
        <item name="solidLight">#F9FDFD</item>
        <item name="solidDark">#CDDCEDFC</item>
        <item name="android:colorBackground">#ECF5FD</item>
        <item name="android:statusBarColor">?backgroundColor</item>
        <item name="android:textColor">@color/project</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Wallpaper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Wallpaper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>